pipeline {
    agent any

    stages {
        stage('Actuate Deployment') {
            steps {
                sh '''
                   for instance in `ls instances`;do
                      # Update its config
                      NAME=$(basename -s .yaml $instance)
                      gcloud compute instances update-from-file $NAME --source resources/$NAME.yaml
                   done
                '''
            }
        }
    }
}
